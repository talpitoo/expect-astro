<style>
  footer a,
  footer a:hover,
  footer a:active,
  footer a:focus {
    color: var(--color-gray-light);
    transition: all 200ms ease 0s;
  }

  .list-social li {
    display: inline-block;
  }

  .list-social a {
    color: var(--color-gray);
    font-size: 20px;
    text-decoration: none;
    position: absolute;
    right: 0;
  }

  .list-social a:hover,
  .list-social a:focus {
    transform: scale(1.3);
  }

  .list-social > li {
    padding-left: 0;
    padding-right: 0;
    position: relative;
    width: 40px;
    height: 40px;
  }

